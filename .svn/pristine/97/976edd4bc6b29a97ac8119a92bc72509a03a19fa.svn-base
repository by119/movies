page-demand-detail {
    .scroll-content {
        background-color: #fafafa;
    }
    .item-ios {
        background-color: transparent;
    }
    .item-ios.item-block .item-inner {
        border: unset;
        overflow: hidden;
    }
    .notice-head {
        position: relative;
        .head-info {
            position: absolute;
            top: 0;
            img {
                    width: 45%;
                    float: left;
                    object-fit: cover;
                    height: 14rem;
                }
                .notice-info {
                    width: 55%;
                    float: left;
                    h4,p {
                        margin: 0;
                        line-height: 2rem;
                        overflow: hidden;
                        text-overflow:ellipsis;
                        white-space: nowrap;
                        padding: 0 0 0 1rem;
                        color: #fff;
                    }
                    h4 {
                        color: #fff;
                        line-height: 4rem;
                        span {
                            font-size: 3rem;
                        }
                    }
                }
        }
    }
    .label-ios{
        margin-top: 0 !important;
    }
    .tile{
        font-size:1rem;
        font-weight: 600;
    }

    .list-all{
        margin: 0 1rem;
        overflow: hidden;
    }
    .list-title {
        margin-bottom: 1rem;
        margin-top: 1rem;
    }
    .all{
        background:#fff;
        overflow: hidden;
    }
    .list-title-con{
        white-space:normal !important;
        font-size: 1rem;
        line-height: 1.5rem;
        color: #4A7577;
    }
    .list-title-time{
        height: 2rem;
        line-height: 2rem;
        color: #9A9A9A;
        font-size: 0.5rem;
        overflow: hidden;
        margin-bottom: 0.7rem !important;
        .icon-time{
            display: inline-block;
            font-size: 1.8rem;
            float: left;
        }
        .time{
            margin-right: 0.5rem;
        }
    }
    .logistics{
        margin: 0 1rem;
        background: #fff;
    }
    .con-list{
        width: 100%;
        overflow: hidden;
        // margin-bottom: 1rem;
        p{
            margin: 0 1rem;
            height: 2rem;
            line-height: 2rem;
            color: #333;
            font-size: 1.2rem;
            font-weight: 600;
            .con-list-span{
                display: inline-block;
                width: 25%;
                color: #9A9A9A;
                font-weight: 500;
            }
        }
    }
    .all-introduce{
        white-space:normal !important;
        font-size: 1rem;
        color: #999;
        margin: 0 1rem;
        line-height: 1.5rem;
        margin-bottom: 0.5rem;
    }
    .sole{
        font-size:1rem;
        font-weight: 600;
        margin:0 1rem;
        color: #333;
        line-height: 1.5rem;
        .sole-name{
            margin-right: 1rem;
        }
    }
}
