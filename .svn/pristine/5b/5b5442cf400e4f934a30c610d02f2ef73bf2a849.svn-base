page-notice-detail {    
    .scroll-content {
        background-color: #fafafa;
    }
    .item-ios {
        background-color: transparent;
    }
    .item-ios.item-block .item-inner {
        border: unset;
    }
   .notice-head {
       position: relative;
       .head-info {
           position: absolute;
           top: 0;
           img {
                width: 45%;
                float: left;
                object-fit: cover;
                height: 14rem;
            }
            .notice-info {
                width: 55%;
                float: left;
                h4,p {
                    margin: 0;
                    line-height: 2rem;
                    overflow: hidden;
                    text-overflow:ellipsis;
                    white-space: nowrap;
                    padding: 0 0 0 1rem;
                    color: #fff;
                }
                h4 {
                    color: #fff;
                    line-height: 4rem;
                    span {
                        font-size: 3rem;
                    }
                }
            }
       }
   }
    .list-title {
        margin-bottom: 1rem;
    }
}
