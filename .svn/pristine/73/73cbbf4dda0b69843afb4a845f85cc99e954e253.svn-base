page-demand-choose {
    ion-header {
        // position: fixed;
        // top: 0;
        .toolbar-title-ios,
        .back-button.show-back-button {
            color: #fff;
        }
    }
    .header-ios .toolbar-ios:last-child .toolbar-background-ios {
        background: transparent;
        border: unset;
    }
    .fixed-content{
        background:#fafafa;
    }
    .item-ios{
        background:transparent;
    }
    .item-ios.item-block .item-inner{
        border-bottom:0 !important;
    }
    .notice-head {
        position: relative;
        .head-bg {
            height: 24rem;
        }
        .head-info {
            position: absolute;
            top: 0;
            img {
                 width: 45%;
                 float: left;
                 object-fit: cover;
                 height: 14rem;
             }
             .notice-info {
                 width: 55%;
                 float: left;
                 h4,p {
                     margin: 0;
                     line-height: 2rem;
                     overflow: hidden;
                     text-overflow:ellipsis;
                     white-space: nowrap;
                     padding: 0 0 0 1rem;
                     color: #fff;
                 }
                 h4 {
                     color: #fff;
                     line-height: 4rem;
                     span {
                         font-size: 3rem;
                     }
                 }
             }
        }
    }
    .demand_choose{
        width:100%;
        height:auto;
        overflow: hidden;
        .demand_choose_box{
            width:94%;
            height:auto;
            overflow: hidden;
            background:#fff;
            margin:3%;
            border-radius:4px;
            padding:3%;
            .demand_choose_content{
                height:auto;
                overflow: hidden;
                border-bottom:1px solid #d9d9d9;
                h5{
                    font-size: 1.7rem;
                    color:#222;
                }
                p{
                    font-size: 1.5rem;
                    color:#666;
                    line-height: 2.5rem;
                }
            }
            .demand_choose_roles{
                height:auto;
                overflow: hidden;
                span{
                    line-height: 4.7rem;
                    font-size: 1.5rem;
                    display: block;
                    float:left;
                    em{
                        font-style: normal;
                    }
                }
                button{
                    width:7rem;
                    line-height: 2.5rem;
                    float:right;
                    border-radius:10px;
                    margin-top: 1rem;
                    background:linear-gradient(to right, #49afa4, #14666e);
                    color:#fff;
                }
            }
        }
    }
}
