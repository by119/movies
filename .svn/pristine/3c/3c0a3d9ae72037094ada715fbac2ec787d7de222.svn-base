.notice-list {
    box-shadow: 0px 0px 4px #abaaaa;
    border-radius: .5rem;
    overflow: hidden;
    margin-bottom: 1.5rem;
    background-color: #fff;
    position: relative;
    p {
        color: #333;
        font-size: 1.4rem;        
        padding: .5rem 1rem;
        span {
            float: right;
            color: #999;
            font-size: 1.2rem;
        }
    }
    .tips {
        position: absolute;
        right: 2rem;
        background-color: #4aafa4;
        padding: 1rem;
        background: no-repeat;
        background-image: url('../../assets/icon/tip_green.png');
        background-position: center bottom;
        p {
            color: #fff;
            line-height: 1.6rem;
            padding: 0;
        }
        p:first-child {
            font-weight: 600;
        }
    }
    img {
        width: 100%;
        height: 16rem;
        overflow: hidden;
        object-fit: cover;
    }
}
