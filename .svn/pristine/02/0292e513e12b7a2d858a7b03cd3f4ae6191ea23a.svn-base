page-album-detail {
    .album-list {
        position: relative;
        // border-radius: .5rem;
        // overflow: hidden;
        margin-top: 0.5rem;
        width: 31%;
        float: left;
        margin-right: 3%;
        ion-icon {
            width: 1.8rem;
            border-radius: 0 0 0 1.5rem;
            color: #fff;
            background-color: rgba(0,0,0,0.4);
            position: absolute;
            right: 0;
            top: 0;
            text-align: center;
        }
        img {
            width: 100%;
            height: 13rem;
            object-fit: cover;
        }
    }
    .album-list:nth-child(3n) {
        margin-right: 0;
    }
}
