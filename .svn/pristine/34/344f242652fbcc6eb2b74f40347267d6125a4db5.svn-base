<ion-header>
  <ion-navbar color="change">
    <ion-title>我的档期</ion-title>
  </ion-navbar>
</ion-header>


<ion-content padding>
  <div class="date-box-null">
    <ion-item>
      <ion-label>无档期</ion-label>
      <ion-checkbox [(ngModel)]="date0" (click)="updateDateState(0)" color="aqua"></ion-checkbox>
    </ion-item>
    <ion-item>
      <ion-label>有档期</ion-label>
      <ion-checkbox [(ngModel)]="date1" (click)="updateDateState(1)" color="aqua"></ion-checkbox>
    </ion-item>
  </div>
  <div class="date-box" *ngIf="monthListState">
    <ion-item style="text-align: center">
      请选择有档期的月份（非必选）
    </ion-item>
    <ion-item *ngFor="let item of monthList;let i=index">
      <ion-label>{{item?.month}}月</ion-label>
      <ion-checkbox [(ngModel)]="monthState[i]" color="aqua" [checked]="monthState[i]"  (click)="updateMonth()"></ion-checkbox>
    </ion-item>
  </div>
</ion-content>
<ion-footer>
  <button (click)="confirm()" ion-button color="change">确认</button>
</ion-footer>