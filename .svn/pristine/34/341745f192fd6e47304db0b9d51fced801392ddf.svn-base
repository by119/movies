page-intro {
    .scroll-content {
        background-color: #fafafa;
    }
    .item-ios {
        background-color: transparent;
    }
    .item-ios.item-block .item-inner {
        border: unset;
    }
    
    .add-more {
        text-align: center;
        color: #14666e;
        font-size: 1.6rem;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 2px solid #fafafa;
        ion-icon {
            font-size: 2.4rem;
            vertical-align: middle;
            margin-right: .5rem;
        }
        form {
            display: none;
        }
    }
    .intro-head {
        position: relative;
        margin-bottom: 4rem;
        .head-bg {
            filter: unset;
        }
        .my-data {
            position: absolute;
            top: 25%;
            right: -1rem;
            background-color: #fff;
            padding: .5rem 1rem;
            line-height: 1rem;
            border-radius: 1.5rem 0 0 1.5rem;
            background: linear-gradient(left, #FF3742, #FF8156)
            span {
                margin: 0 .5rem;
            }
        }
        .avatar {
            position: absolute;
            top: 20%;
            left: 50%;
            transform: translateX(-50%);
            width: 8rem;
            height:8rem;
            object-fit: cover;
            border-radius: 50%;
        }
        .intro-base-box {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: -4rem;
            .intro-base {
                border-radius: 0.5rem;
                width:100%;
                height: 8rem;
                padding: 1rem;
                display: flex;
                background-color: rgba(255,255,255,0.9);
                text-align: center;
                .intro-age {
                    flex: 1;
                    display: flex;
                    flex-direction: column;
                    h3{
                        font-size: 2.1rem;
                    }
                    h3,p {
                        margin: 0;
                        flex: 1;
                        line-height: 3rem;
                    }
                    p {
                        color: #999;
                    }
                }
    
            }
        }
    }
    // 工作经历
    .intro-work {
        background-color: #fff;
        border-radius: 0.5rem;
        padding: 1rem;
        overflow: hidden;
        ion-slides {
            margin-top: 1rem;
        }
        ion-slide {            
            box-shadow: 0px 0px 2px #abaaaa;
            border-radius: .5rem;
            overflow: hidden;
            background-color: #fff;
            .item-ios {
                padding: 0;
            }
            .label-ios {
                margin: 0;
                display: flex;
                flex-direction: row;   
            }
            img {
                width: 45%;
                float: left;
                object-fit: cover;
                height: 11rem;
            }
            .work-detail {
                width: 55%;
                float: left;
                padding: .5rem 0;
                position: relative;
                .del-btn {
                    position: absolute;
                    top: 0.6rem;
                    right: 0;
                    font-size: 1.6rem;
                    color: #999;
                }
                h4,p {
                    margin: 0;
                    line-height: 2rem;
                    overflow: hidden;
                    text-overflow:ellipsis;
                    white-space: nowrap;
                }
                h4 {
                    padding: 0 1rem 0 .5rem;
                    color: #333;
                }
                p {
                    padding: 0 0 0 .5rem;
                    color: #999;
                    font-size: 1rem;
                }
            }
        }
    }
    // 档期
    .work-date {
        background-color: #fff;
        border-radius: 0.5rem;
        padding: 1rem;
        .date-modify {
            float: right;
            color: #14666e;
            font-size: 1.4rem;
            ion-icon {
                font-size: 1.4rem;
                vertical-align: middle;
            }
        }
        .date-box-null {
            border: 1px solid #fafafa;
            margin-top: 0.5rem;
            text-align: center;
            padding: 1rem;
        }
        .date-box {
            display: flex;
            flex-direction: row;
            border: 1px solid #fafafa;
            border-left:unset;
            margin-top: 0.5rem;
            .data-list {
                flex: 1;
                text-align: center;
                flex-direction: column;
                justify-content:space-around;
                p {
                    color: #333;
                    margin: 0;
                    line-height: 2rem;
                    border-left: 1px solid #fafafa;
                }
                p:last-child {
                    border-top: 1px solid #fafafa;
                }
            }
            .data-list:first-child {
                flex: 2;
            }
        }
    }
    // 相册
    .intro-album {
        padding: 1rem;
        background-color: #fff;
        border-radius: .5rem;
        .album-box {
            margin-top: 0.5rem;
            .album-list {
                position: relative;
                // border-radius: .5rem;
                // overflow: hidden;
                width: 30%;
                float: left;
                margin-right: 4%;
                ion-icon {
                    width: 1.8rem;
                    border-radius: 0 0.5rem 0 1.5rem;
                    color: #fff;
                    background-color: rgba(0,0,0,0.4);
                    position: absolute;
                    right: 0;
                    top: 0;
                    text-align: center;
                }
                img {
                    border-radius: .5rem;
                    width: 100%;
                    height: 8rem;
                    object-fit: cover;
                }
                p {
                    overflow: hidden;
                    text-overflow:ellipsis;
                    white-space: nowrap;
                    text-align: center;
                    color: #333;
                    font-size: 1.5rem;
                    line-height: 1.8rem;
                    margin-bottom: 0.5rem;
                }
            }
            .album-list:nth-child(3n) {
                margin-right: 0;
            }
        }
    }
    // 视频
    .intro-video {
        .video-box {
            position: relative;
            ion-icon {
                width: 1.8rem;
                border-radius: 0 0.5rem 0 1.5rem;
                color: #fff;
                background-color: rgba(0,0,0,0.4);
                position: absolute;
                right: 0;
                top: 0;
                text-align: center;
                z-index: 999;
            }
        }
    }
}
